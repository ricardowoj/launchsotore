{% extends "layout.njk" %}

{% block content %}

<section class="product-single">

    <div class="gallery">
        <img src="https://www.efacil.com.br/wcsstore/ExtendedSitesCatalogAssetStore/Imagens/1000/CAG3590W20102BR-00002_01.jpg" />
    </div>

    <div class="info">
        <h1>{{product.name}}</h1>

        <div class="published">
            Publicado em {{product.published.day}} às {{product.published.hour}}
        </div>

        <div class="descruption">
            {{product.description}}
        </div>

        <div class="price-buy">
            <div class="price">
                {{product.price}}

                {% if product.price !== product.oldPrice %}
                <span class="old">R$ 3699,00</span>
                {% endif %}
            </div>
            <div class="buy">
                {% if products.status == 0 %}
                    <p class="unavailable">Indisponível</p>
                {% elseif products.quantity %}
                    <p class="unavailable">Fora de Estoque</p>
                {% else %}
                    <button class="button">Comprar</button>
                {% endif %}
            </div>
        </div>
    </div>

</section>

{% endblock content %}